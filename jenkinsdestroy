pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID     = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm  // Checkout your git repository
            }
        }

        stage('Restore State') {
            steps {
                script {
                    // Restore the terraform state file from the previous job (or artifact storage)
                    // Make sure to copy the state file to the appropriate directory
                    // Example: Copy from Jenkins artifact storage or remote state location
                    copyArtifacts projectName: 'terraform-apply', filter: '**/terraform.tfstate', target: '.'
                }
            }
        }

        stage('Destroy') {
            steps {
                script {
                    def gitBash = 'C:\\Program Files\\Git\\bin\\bash.exe'
                    def terraformPath = '/c/terraform/terraform_1.9.8_windows_amd64/terraform.exe'
                    // Run terraform destroy using the same state file that was created in Job 1
                    bat "\"${gitBash}\" -c '${terraformPath} destroy -input=false -auto-approve'"
                }
            }
        }
    }
}
